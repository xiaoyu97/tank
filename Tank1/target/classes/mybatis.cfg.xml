<!--mybatis的主配置文件-->
<configuration>
    <!--    配置环境-->
    <environments default="mysql">
        <environment id="mysql">
            <transactionManager type="JDBC"></transactionManager>
            <!--            配置链接数据库的基本信息-->
            <dataSource type="POOLED">
                <!--                配置链接数据库的4个基本信息-->
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/tank"/>
                <property name="username" value="root"/>
                <property name="password" value="Root_123"/>
            </dataSource>
        </environment>
    </environments>
    <!--指定映射配置文件的位置，映射配置文件指的是每个dao独立的配置文件-->
    <mappers>
        <!--        <mapper resource="com/tank/mapper/IExperienceDao.xml"/>-->
        <!--        <mapper resource="com/tank/mapper/ILoginDao.xml"/>-->
        <package name="tank.mapper"/>
    </mappers>
</configuration>
